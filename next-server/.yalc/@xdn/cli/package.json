{
  "name": "@xdn/cli",
  "version": "1.19.0-0cb9da79",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist; mkdir ./dist; cp package.json README.md ./dist; babel src -d dist",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "test": "jest",
    "release": "cd ./dist; npm publish --access public",
    "release:next": "npm run release -- --tag next"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": "js",
      "quiet": false
    }
  },
  "dependencies": {
    "axios": "^0.19.0",
    "chalk": "^2.4.2",
    "conf": "^6.1.0",
    "execa": "^3.2.0",
    "filesize": "^6.0.1",
    "form-data": "^2.5.1",
    "fs-extra": "^8.1.0",
    "globby": "^10.0.1",
    "is-ci": "^2.0.0",
    "lodash": "^4.17.15",
    "open": "^7.0.0",
    "ora": "^4.0.3",
    "prompts": "^2.2.1",
    "resolve-package-path": "^2.0.0",
    "simple-git": "^1.126.0",
    "tmp-promise": "^2.0.2",
    "ws": "^7.2.0",
    "yargs": "^14.2.0",
    "yazl": "^2.5.1"
  },
  "bin": {
    "xdn": "./index.js"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.(js)?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/frameworks/**/*.{js,jsx}",
      "!**/test/**",
      "!**/index.js"
    ],
    "moduleNameMapper": {
      "^@xdn/core(.*)$": "<rootDir>/../core/src/$1"
    }
  }
}
